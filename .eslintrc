{
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "arrow-parens": "off",
        "class-methods-use-this": "off",
        "import/prefer-default-export": "off",
        "comma-dangle": "off",
        "no-param-reassign": "off",
        "no-use-before-define": "off",
        "consistent-return": "off",
        "max-len": "off",
        "radix": "off",
        "curly": "off",
        "func-names": "off"
    },
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": "airbnb-base"
}
